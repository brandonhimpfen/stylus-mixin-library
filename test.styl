@import 'mixins/*'

/* Run Tests */

.border-radius
  border-radius(5px)

.border-top-radius
  border-top-radius(5px)

.border-left-radius
  border-left-radius(5px)

.border-bottom-radius
  border-bottom-radius(5px)

.border-right-radius
  border-right-radius(5px)

.clearfix
  clearfix()

.border
  border(1px solid #000)

.border-all
  border-all(1px, solid, #000)

.size
  size(50px, 100px)

.margin
  margin(20px)

.margin-all
  margin-all(1px, 2px, 3px, 4px)

.padding
  padding(20px)

.padding-all
  padding-all(1px, 2px, 3px, 4px)

.border-image
  border-image("border.png", 100%, 1, 0, stretch)
